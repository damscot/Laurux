'************************************** Gestion des articles *****************************************************
Public Sub _new(Barticle As Boolean, Bstocke As Boolean, TriArticle As String, Selection As String, Option As String, Optional Dispo As Boolean = False, Optional Mat As Boolean = False, Optional ob As Object = Null)

  Utils.Observers(Me)
  Me.Center
  Obj = ob
  If Object.IsValid(Obj) Then
    Object.SetProperty(Obj, "Bsel", False)
    Object.SetProperty(Obj, "Bval", Null)
  Endif
  CB2.Text = ""
  Org = ""
  Select Case Option
    Case "Fournisseur"
      CB2.Text = Selection
      Org = Option
    Case "Centrale"
      CB2.Text = Selection
      Org = Option
    Case "Famille"
      CB2.Text = Selection
      Org = Option
    Default
      CB2.Text = ""
      Org = ""
  End Select

  Bart = Barticle
  BStock = Bstocke
  Tri2Art = TriArticle
  If Start.LocalSettings["/Soc" & Start.Societe & "/Materiel"] = True Then
    Materiel.Value = Mat
    Materiel.Visible = True
  Else
    Materiel.Value = False
    Materiel.Visible = False
  Endif
  Disponible.Value = Dispo
  
  CB1Conv = New Collection
  CB1.Add("-- Equiv. --")
  CB1Conv.Add("art_cequ", CB1.List[0])
  CB1.Add("--  Barre --")
  CB1Conv.Add("art_cbarre", CB1.List[1])
  CB1.Add("---  CN8 ---")
  CB1Conv.Add("art_cn8", CB1.List[2])
  CB1.Add("-- Casier --")
  CB1Conv.Add("art_casier", CB1.List[3])
  CB1.Add("-- Carac. --")
  CB1Conv.Add("art_crst", CB1.List[4])
  CB1.Add("-- Four. --")
  CB1Conv.Add("art_four", CB1.List[5])

  CB1.Text = CB1.List[0]
  
  Coul = New LCoul
  Update_Req()

End

Public Sub form_Close()
  
  Utils.Log(Me, "Selection: " & Bsel & "\tVal: " & Bval, Logger.Debug)
  
End

Public Sub Update_Req()

  Dim k As String
  Dim Req As String
  Dim Res As Result
  Dim prop As ObjProp
  
  Col = New Collection
  
  
  
  Select Case Tri2Art
    Case "art_code"
      Req = "select *, " & Coul.Art_DB_bgcolor() & " from " & Cbase.Table("TabArt")
      Res = Utils.db.Exec(Req)
      If Not Res.Available Then Return
      k = Space(3) & "---- Code ----" & Space(3)
      prop = New ObjProp(Res.Fields[Tri2Art], k)
      Col.Add(prop, k)
      k = Space(7) & "----------- Intitule -------------" & Space(7)
      prop = New ObjProp(Res.Fields["art_design"], k)
      prop.tri = True
      Col.Add(prop, k)
      prop = New ObjProp(Res.Fields[CB1Conv[CB1.Text]], "-" & CB1.Text & "-")
      Col.Add(prop, "-" & CB1.Text & "-")
      k = "---- Fam. -----"
      prop = New ObjProp(Res.Fields["art_fam"], k)
      Col.Add(prop, k)
      k = "- PvHT -"
      prop = New ObjProp(Res.Fields["art_pvht"], k)
      prop.AddChamp("Alignment", Align.Right, "0.000")
      Col.Add(prop, k)
      k = "- PvTTC -"
      prop = New ObjProp(Res.Fields["art_pvttc"], K)
      prop.AddChamp("Alignment", Align.Right, "0.000")
      Col.Add(prop, k)
      k = "- Qte -"
      prop = New ObjProp(Res.Fields["art_qte"], k)
      prop.AddChamp("Alignment", Align.Right, "0.000")
      Col.Add(prop, k)
    Case "mo_code"
      Req = "select * from " & Cbase.Table("TabMo")
      Res = Utils.db.Exec(Req)
      If Not Res.Available Then Return
      k = "-----code-----"
      prop = New ObjProp(Res.Fields[Tri2Art], k)
      Col.Add(prop, k)
      k = "-------------------intitule-------------------"
      prop = New ObjProp(Res.Fields["mo_design"], k)
      Col.Add(prop, k)
      k = "-famille-"
      prop = New ObjProp(Res.Fields["mo_fam"], k)
      Col.Add(prop, k)
      k = "-PV HT-"
      prop = New ObjProp(Res.Fields["mo_valeurht"], k)
      prop.AddChamp("Alignment", Align.Right, "0.00")
      Col.Add(prop, k)
      k = "-PV TTC-"
      prop = New ObjProp(Res.Fields["mo_valeurttc"], k)
      prop.AddChamp("Alignment", Align.Right, "0.00")
      Col.Add(prop, k)
      CB1.Enabled = False
    Default
      Error.Raise("Unsupported Feature")
  End Select

  tr = New TriGen(Panel2, Col, Res, Req, 20, Me) As "ColTri"
  Filter_Calc()

End

Public Sub ColTri_MajSel(val As Variant)

  If Object.IsValid(Obj) Then
    If Bsel = True Then
      If Val Then
        Object.SetProperty(Obj, "Bsel", Bsel)
        Object.SetProperty(Obj, "Bval", Val)
      Else
        Stop Event
      Endif
    Endif
  Else
    Stop Event
  Endif
  
  Me.Close()

End

