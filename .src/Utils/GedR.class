      i = Selected.Find(Res!doc_lind)
      If i = -1 Then
        Selected.Add(Res!doc_lind)
      Endif
    Until Res.MoveNext()
  Endif
  Selcnt.Value = Selected.Count
  tr.Refresh_Data()
  
End

Public Sub DeSelectAllFil_Click()

