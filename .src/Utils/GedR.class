Public Sub TriGen_MajSel(val As Variant)
  
  Dim Res As Result
  Dim i As Integer

  If Bsel = True Then
    If Val Then
      i = Selected.Find(Val)
      If i <> -1 Then
        Selected.Remove(i)
      Else
        Selected.Add(Val)
      Endif
      Selcnt.Value = Selected.Count
      tr.Refresh_Data()
      Bsel = False
      Val = ""
    Endif
  Endif
  
  Stop Event

End

