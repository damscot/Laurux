  Dim CliMail As String = "Traitement impossible ! Les clients suivants n'ont pas d'adresse courriel"
  Dim liste As Boolean
  
  
  Select Case $vfac.choix
    Case "FM"
      Liste = False
      res = Utils.db.Exec("SELECT code FROM Facturefm")
